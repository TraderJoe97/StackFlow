@model IEnumerable<StackFlow.ViewModels.ProjectReportViewModel>

@{
    ViewData["Title"] = "Project Reports";
}

<div class="card shadow-sm border-0 rounded-4 p-4 mt-4">
    <h2 class="card-title text-center mb-4 fw-bold text-success">
        <i class="bi bi-bar-chart-fill me-2"></i>Project Reports
    </h2>
    <hr />

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            <i class="bi bi-info-circle me-2"></i>No projects found to generate reports.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-striped align-middle rounded-3 overflow-hidden">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Project Name</th>
                        <th scope="col">Status</th>
                        <th scope="col" class="text-center">Total Tasks</th>
                        <th scope="col" class="text-center">Completed</th>
                        <th scope="col" class="text-center">In Progress</th>
                        <th scope="col" class="text-center">To Do</th>
                        <th scope="col">Created By</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var report in Model)
                    {
                        <tr>
                            <td>
                                <strong>@report.Project.ProjectName</strong><br />
                                <small class="text-muted">@report.Project.ProjectDescription</small>
                            </td>
                            <td>
                                <span class="badge @(report.Project.ProjectStatus == "Active" ? "bg-primary" : report.Project.ProjectStatus == "Completed" ? "bg-success" : "bg-secondary")">
                                    @report.Project.ProjectStatus
                                </span>
                            </td>
                            <td class="text-center"><span class="badge bg-dark rounded-pill px-3 py-2">@report.TotalTasks</span></td>
                            <td class="text-center"><span class="badge bg-success rounded-pill px-3 py-2">@report.CompletedTasks</span></td>
                            <td class="text-center"><span class="badge bg-warning text-dark rounded-pill px-3 py-2">@report.InProgressTasks</span></td>
                            <td class="text-center"><span class="badge bg-info rounded-pill px-3 py-2">@report.ToDoTasks</span></td>
                            <td>@report.Project.CreatedBy?.Username</td>
                            <td>
                                <a asp-action="TaskDetails" asp-route-id="@report.Project.Id" class="btn btn-outline-primary btn-sm rounded-pill">
                                    <i class="bi bi-eye-fill"></i> View Tasks
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="mt-4 text-center">
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">
            <i class="bi bi-arrow-left-circle me-2"></i> Back to Dashboard
        </a>
    </div>
</div>
