@model StackFlow.Models.Task

@{
    ViewData["Title"] = "Create New Task";
}

<div class="card shadow-sm border-0 rounded-4 p-4 mt-4">
    <h2 class="card-title text-center mb-4 fw-bold text-primary">Create New Task</h2>
    <hr />

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-x-circle-fill me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="CreateTask" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="TaskTitle" class="form-label">Task Title</label>
                    <input asp-for="TaskTitle" class="form-control rounded-pill" />
                    <span asp-validation-for="TaskTitle" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TaskDescription" class="form-label">Description</label>
                    <textarea asp-for="TaskDescription" class="form-control rounded-4" rows="5"></textarea>
                    <span asp-validation-for="TaskDescription" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ProjectId" class="form-label">Project</label>
                    <select asp-for="ProjectId" class="form-control rounded-pill" asp-items="ViewBag.Projects">
                        <option value="">-- Select Project --</option>
                    </select>
                    <span asp-validation-for="ProjectId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AssignedToUserId" class="form-label">Assign To</label>
                    <select asp-for="AssignedToUserId" class="form-control rounded-pill" asp-items="ViewBag.Users">
                        <option value="">-- Select User (Optional) --</option>
                    </select>
                    <span asp-validation-for="AssignedToUserId" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="TaskStatus" class="form-label">Status</label>
                        <select asp-for="TaskStatus" class="form-control rounded-pill" asp-items="ViewBag.TaskStatuses">
                            <option value="">-- Select Status --</option>
                        </select>
                        <span asp-validation-for="TaskStatus" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="TaskPriority" class="form-label">Priority</label>
                        <select asp-for="TaskPriority" class="form-control rounded-pill" asp-items="ViewBag.TaskPriorities">
                            <option value="">-- Select Priority --</option>
                        </select>
                        <span asp-validation-for="TaskPriority" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="TaskDueDate" class="form-label">Due Date</label>
                    <input asp-for="TaskDueDate" type="date" class="form-control rounded-pill" />
                    <span asp-validation-for="TaskDueDate" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-primary btn-lg rounded-pill">
                        <i class="bi bi-check-circle-fill me-2"></i> Create Task
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">
                        <i class="bi bi-arrow-left-circle me-2"></i> Back to Dashboard
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
