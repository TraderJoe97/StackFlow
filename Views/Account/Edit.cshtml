@model StackFlow.Models.User

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="row">
    <div class="col-md-6">
        <h3>Update Profile</h3>

        <form asp-action="Edit" method="post">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" value="@Model.Username" class="form-control" />
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input name="email" value="@Model.Email" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>
    </div>

    <div class="col-md-6">
        <h3>Change Password</h3>

        <form asp-action="ChangePassword" method="post">
            <div class="mb-3">
                <label for="currentPassword" class="form-label">Current Password</label>
                <input name="currentPassword" type="password" class="form-control" required />
            </div>

            <div class="mb-3">
                <label for="newPassword" class="form-label">New Password</label>
                <input name="newPassword" type="password" class="form-control" required />
            </div>

            <button type="submit" class="btn btn-warning">Change Password</button>
        </form>
    </div>
</div>
