@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
    <h2>Welcome, @ViewBag.Username!</h2>
    <div class="mt-2 mt-md-0">
        <a asp-controller="Profile" asp-action="Edit" class="btn btn-outline-secondary me-2">Edit Profile</a>
        <a asp-controller="Account" asp-action="Logout" class="btn btn-danger">Logout</a>
    </div>
</div>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card border-secondary h-100">
            <div class="card-header bg-secondary text-white">To Do</div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li>- Task 1</li>
                    <li>- Task 2</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card border-info h-100">
            <div class="card-header bg-info text-white">In Progress</div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li>- Task 3</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card border-success h-100">
            <div class="card-header bg-success text-white">Completed</div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li>- Task 4</li>
                </ul>
            </div>
        </div>
    </div>
</div>
